%nav.demo-navigation.mdl-navigation
  = link_to dashboards_path, class: "mdl-navigation__link #{'active' if current_page?(dashboards_path) }" do
    %i.material-icons{:role => "presentation"}> dashboard
    %span.nav__item-name
      Dashboard
  = cell(:content_type, collection: current_user.active_tenant.all_up_organization_for(ContentType)).(:nav)
  = link_to new_content_type_path, class: 'mdl-navigation__link' do
    %i.material-icons{role: 'presentation'}>
      note_add
    %span.nav__item-name
      Create Type
  .mdl-layout-spacer
  .hidden
    = link_to 'https://github.com/cbdr/cortex', class: 'mdl-navigation__link', target: '_blank' do
      %i.material-icons{:role => "presentation"} help_outline
      %span.visuallyhidden Help
